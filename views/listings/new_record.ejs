<%-layout('layouts/boilerplate')-%>
<body>
    <div class="row ms-md-3 ms-2">
    <div class=" offset-0 col-12 col-md-7 offset-md-2">
        <h3 class="mt-2 mb-2">Create a new listing</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3 mt-2">
            <label for="label"class="form-label">Title</label>
            <input type="text" placeholder="Enter title" name="listing[title]" id="label" class="form-control" required>
            <div class="valid-feedback">Good title</div>
        </div>
     
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"class="form-control" id="description" required placeholder="Enter the description here"></textarea>
        <div class="invalid-feedback">Please enter at least a line of Description.</div>        
          </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]" id="image"class="form-control">
            <div class="Upload image"></div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number"name="listing[price]" id="price"placeholder="1200"class="form-control" required>
            <div class="invalid-feedback">Enter the valid price amount</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country </label>
            <input type="text" name="listing[country]" id="country"placeholder="India" class="form-control" required>
            <div class="valid-feedback">Enter the valid country name</div>
        </div>
     </div>
        <div class="mb-3">
        <label for="location" class="form-label">
         Location
        </label>
        <input type="text" name="listing[location]" id="location"placeholder="Lotas temple/Delhi"class="form-control" required>
        <div class="valid-feedback">Enter the valid location</div>
    </div>
       <div class="mb-3">
           <button type="submit" value="Edit" class="btn-new btn">
            ADD
        </button>
       </div>
        </form>
    </div>
    </div>
    
</body>